<% @shops.each do |shop| %>
  <h4>店名</h4>
  <%= shop.name %>
  <h4>住所</h4>
  <%= shop.address %>
  <h4>電話番号</h4>
  <%= shop.phone %>
  <h4>営業時間</h4>
  <%= shop.first_hour %>:<%= shop.first_min %>~<%= shop.end_hour %>:<%= shop.end_min %>
  <h4>休業日</h4>
  <%= shop.closed %>
  <h4>アクセス</h4>
  <%= shop.access %>
  <h4>駐車場</h4>
  <% if shop.parking == "true" %>
    <p>あり</p>
  <% else %>
    <p>なし</p>
  <% end %>
  <h4>備考</h4>
  <%= shop.remarks %>
  <h4>画像</h4>
  <%= link_to admin_shop_path(shop) do %>
    <%= image_tag shop.get_image(100, 100) %>
  <% end %>
<% end %>
<%= link_to "新規投稿", new_admin_shop_path %>